{
  "name": "api",
  "version": "1.0.0",
  "description": "API for ProHits-viz",
  "main": "app/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon app/server.js",
    "prod": "NODE_ENV=production node --harmony app/server.js",
    "prod-forever": "NODE_ENV=production forever start -c 'node --harmony' -a --uid 'prohits-viz-api' app/server.js",
    "test": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knightjdr/prohits-viz-api.git"
  },
  "author": "James Knight",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/knightjdr/prohits-viz-api/issues"
  },
  "homepage": "https://github.com/knightjdr/prohits-viz-api#readme",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "md5": "^2.2.1",
    "mock-fs": "^4.11.0",
    "mock-spawn": "^0.2.6",
    "mongo-mock": "^3.9.0"
  },
  "dependencies": {
    "archiver": "^3.1.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "extract-zip": "^1.6.7",
    "ftp": "^0.3.10",
    "http": "0.0.0",
    "isomorphic-fetch": "^2.2.1",
    "memory-cache": "^0.2.0",
    "mongodb": "^3.5.4",
    "multer": "^1.4.2",
    "nanoid": "^2.1.11",
    "rimraf": "^3.0.2",
    "shortid": "^2.2.15",
    "socket.io": "2.0.3",
    "winston": "^3.2.1",
    "yauzl": "^2.10.0"
  },
  "nodemonConfig": {
    "ext": ".js,.json",
    "ignore": [
      "coverage/*",
      "log/*",
      "node_modules/",
      "tmp/*",
      "**/*.test.js"
    ],
    "watch": [
      "app/*",
      "config.js",
      "index.js",
      "logger.js"
    ],
    "verbose": true
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node"
  }
}
